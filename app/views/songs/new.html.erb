<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <%= f.label :Notes%><br>
    <label for="notes">Song notes 1</label>
    <textarea name="song[notes][1]" id="song_notes_1"></textarea>
    <label for="notes">Song notes 2</label>
    <textarea name="song[notes][2]" id="song_notes_2"></textarea>
  <%= f.submit %>
<% end %>


